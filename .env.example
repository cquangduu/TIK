# ================================================================================
# TOPIK DAILY â€” Environment Variables Configuration
# ================================================================================
# Copy this file to .env and fill in your credentials
# ================================================================================

# ==================== AI & CONTENT ====================
GEMINI_API_KEY=your_gemini_api_key
NEWS_API_KEY=your_newsapi_key

# ==================== TEXT-TO-SPEECH ====================
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=koreacentral
TTS_VOICE=ko-KR-InJoonNeural

# ==================== VIDEO ASSETS ====================
PEXELS_API_KEY=your_pexels_api_key
VIDEO_QUALITY=high

# ==================== NAVER API (Dictionary) ====================
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# ==================== GOOGLE DRIVE ====================
DRIVE_FOLDER_ID=your_google_drive_folder_id
# Paste your credentials.json content here (escape quotes if needed)
GDRIVE_CREDENTIALS_JSON={"installed":{"client_id":"...","client_secret":"..."}}

# ==================== YOUTUBE UPLOAD ====================
ENABLE_YOUTUBE_UPLOAD=true
YOUTUBE_PRIVACY=unlisted
YOUTUBE_PLAYLIST_ID=
# YouTube uses same credentials as Drive (GDRIVE_CREDENTIALS_JSON)

# ==================== BLOG ====================
ENABLE_BLOG=true

# ==================== PODCAST ====================
ENABLE_PODCAST=true

# ==================== GITHUB PAGES DEPLOYMENT ====================
ENABLE_GITHUB_DEPLOY=false
GH_TOKEN=your_github_personal_access_token
GH_BLOG_REPO=username/topik-blog
GH_CUSTOM_DOMAIN=topikdaily.com
GH_USER_NAME=TOPIK Bot
GH_USER_EMAIL=bot@topikdaily.com

# ==================== SOCIAL MEDIA ====================
ENABLE_SOCIAL_MEDIA=false

# Twitter/X
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=@your_channel_name

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# ==================== EMAIL NEWSLETTER ====================
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_SUBSCRIBER_LIST=subscriber1@email.com,subscriber2@email.com
RECEIVER_EMAIL=your_email@gmail.com

# ==================== TIKTOK (Manual for now) ====================
TIKTOK_ENABLED=false
TIKTOK_USERNAME=your_tiktok_email
TIKTOK_PASSWORD=your_tiktok_password

# ==================== OTHER ====================
FORCE_CLEAN_VOCAB=true
CACHE_EXPIRY_HOURS=24

# ================================================================================
# MONETIZATION SETTINGS
# ================================================================================

# Enable monetization features
ENABLE_MONETIZATION=true
ENABLE_TELEGRAM_PUSH=false

# ==================== GUMROAD (Digital Products) ====================
GUMROAD_ACCESS_TOKEN=your_gumroad_access_token
GUMROAD_PRODUCT_ID=your_product_id

# ==================== PATREON (Subscriptions) ====================
PATREON_ACCESS_TOKEN=your_patreon_access_token
PATREON_CAMPAIGN_ID=your_campaign_id

# ==================== AFFILIATE LINKS ====================
AFFILIATE_TOPIK_BOOK_1=https://amzn.to/your_affiliate_link_1
AFFILIATE_TOPIK_BOOK_2=https://amzn.to/your_affiliate_link_2
AFFILIATE_TTMIK=https://talktomeinkorean.com/?ref=your_ref

# ==================== TELEGRAM BOT ====================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHANNEL_ID=@your_channel
TELEGRAM_ADMIN_ID=your_telegram_user_id
TELEGRAM_PAYMENT_TOKEN=your_payment_provider_token
